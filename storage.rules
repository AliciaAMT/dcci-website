rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    // This checks the Firestore adminUsers collection
    function isAdminUser() {
      return request.auth != null &&
             request.auth.uid != null &&
             firestore.exists(/databases/(default)/documents/adminUsers/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Thumbnails for content/articles
    // Only authenticated admin users can upload
    // Anyone can read (for displaying thumbnails)
    match /thumbnails/{userId}/{fileName} {
      // Allow read access to everyone (for displaying thumbnails)
      allow read: if true;
      
      // Helper function to validate safe image MIME types
      // Only allows static image formats, explicitly excludes GIF, SVG, video, etc.
      function isSafeImageType() {
        return request.resource.contentType == 'image/jpeg' ||
               request.resource.contentType == 'image/jpg' ||
               request.resource.contentType == 'image/png' ||
               request.resource.contentType == 'image/webp' ||
               request.resource.contentType == 'image/bmp' ||
               request.resource.contentType == 'image/tiff' ||
               request.resource.contentType == 'image/tif' ||
               request.resource.contentType == 'image/avif' ||
               request.resource.contentType == 'image/heic' ||
               request.resource.contentType == 'image/heif';
      }
      
      // Helper function to validate file extension
      function hasSafeExtension() {
        return fileName.matches('.*\\.(jpg|jpeg|png|webp|bmp|tiff|tif|avif|heic|heif)$');
      }
      
      // Allow write (upload) only if:
      // 1. User is authenticated
      // 2. User is an admin
      // 3. The userId in the path matches the authenticated user's UID
      // 4. File size is less than 5MB
      // 5. Content type is a safe image type (excludes GIF, SVG, etc.)
      // 6. File extension matches safe image extensions
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   isAdminUser() &&
                   request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                   request.resource.size > 0 && // File must not be empty
                   isSafeImageType() &&
                   hasSafeExtension();
      
      // Allow delete only for admins
      allow delete: if request.auth != null &&
                    isAdminUser() &&
                    request.auth.uid == userId;
    }
    
    // Content images (for articles content)
    match /content/images/{userId}/{fileName} {
      // Helper function to validate safe image MIME types
      // Only allows static image formats, explicitly excludes GIF, SVG, video, etc.
      function isSafeImageType() {
        return request.resource.contentType == 'image/jpeg' ||
               request.resource.contentType == 'image/jpg' ||
               request.resource.contentType == 'image/png' ||
               request.resource.contentType == 'image/webp' ||
               request.resource.contentType == 'image/bmp' ||
               request.resource.contentType == 'image/tiff' ||
               request.resource.contentType == 'image/tif' ||
               request.resource.contentType == 'image/avif' ||
               request.resource.contentType == 'image/heic' ||
               request.resource.contentType == 'image/heif';
      }
      
      // Helper function to validate file extension
      function hasSafeExtension() {
        return fileName.matches('.*\\.(jpg|jpeg|png|webp|bmp|tiff|tif|avif|heic|heif)$');
      }
      
      allow read: if true;
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   isAdminUser() &&
                   request.resource.size < 10 * 1024 * 1024 && // Max 10MB
                   request.resource.size > 0 && // File must not be empty
                   isSafeImageType() &&
                   hasSafeExtension();
      allow delete: if request.auth != null &&
                    isAdminUser() &&
                    request.auth.uid == userId;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

