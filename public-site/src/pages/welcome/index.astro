---
import { generateMetaTags, generateJSONLD, absoluteUrl } from '../../lib/seo';

const canonicalUrl = absoluteUrl('/welcome/');

const seoData = {
  title: 'DCCI Ministries - Defend Christ, Critique Islam',
  description: 'DCCI Ministries - Building bridges through understanding and dialogue. Defend Christ, Critique Islam.',
  canonicalUrl,
  type: 'website' as const
};

const metaTags = generateMetaTags(seoData);
const jsonLd = generateJSONLD(seoData);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		{@html metaTags}
		{@html jsonLd}
	</head>
	<body>
		<main>
			<h1>Welcome to DCCI Ministries</h1>
			<p>Building bridges through understanding and dialogue.</p>
			<p>Defend Christ, Critique Islam.</p>
		</main>
	</body>
</html>

